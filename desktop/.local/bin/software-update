#!/bin/sh

ECHO=$(which echo)

$ECHO "system software update"
if [ -x "$(command -v dnf)" ]
then
    sudo dnf upgrade
elif [ -x "$(command -v apt)"]
then
    sudo apt update
    sudo apt --yes upgrade
else
    $ECHO "No apt or dnf package manager."
fi

$ECHO -e "\n------------------------------------------------------------------------------------------------------------------------"
$ECHO "flatpak update"
sudo flatpak update

$ECHO -e "\n------------------------------------------------------------------------------------------------------------------------"
$ECHO "zprezto update"
zsh -i -c "zprezto-update"

$ECHO -e "\n------------------------------------------------------------------------------------------------------------------------"
$ECHO "bash-it update"
bash -i -c "bash-it update"

$ECHO -e "\n------------------------------------------------------------------------------------------------------------------------"
$ECHO "pyenv update"
pyenv update

$ECHO -e "\n------------------------------------------------------------------------------------------------------------------------"
$ECHO "poetry update"
poetry self update

$ECHO -e "\n------------------------------------------------------------------------------------------------------------------------"
$ECHO "brew update"
brew update

