#!/bin/sh

echo "system software update"
sudo dnf upgrade

echo -e "\n------------------------------------------------------------------------------------------------------------------------"
echo "flatpak update"
sudo flatpak update

echo -e "\n------------------------------------------------------------------------------------------------------------------------"
echo "zprezto update"
zsh -i -c "zprezto-update"

echo -e "\n------------------------------------------------------------------------------------------------------------------------"
echo "bash-it update"
bash -i -c "bash-it update"

echo -e "\n------------------------------------------------------------------------------------------------------------------------"
echo "poetry update"
poetry self update

echo -e "\n------------------------------------------------------------------------------------------------------------------------"
echo "brew update"
brew update

