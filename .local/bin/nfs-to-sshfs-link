#!/bin/sh
#
# Michael Voetter <mike@famv.net>
#

cd "$HOME"

if [[ ( -d "$HOME/nethome" ) || ( -f "$HOME/nethome" ) ]]; then
    unlink nethome
	ln -s "$HOME/.sshfs-mnt/home/$USER/home" nethome
fi

if [[ ( -d "$HOME/family" ) || ( -f "$HOME/family" ) ]]; then 
    unlink family
	ln -s "$HOME/.sshfs-mnt/family" family
fi

if [[ ( -d "$HOME/pub" ) || ( -f "$HOME/pub" ) ]]; then
    unlink pub
	ln -s "$HOME/.sshfs-mnt/pub" pub
fi
