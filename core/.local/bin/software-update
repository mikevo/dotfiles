#!/bin/sh

ECHO="$(which echo) -e"

$ECHO "UPDATE [System software] -------------------------------------------------------------------------------------------------------------------"
if [ -x "$(command -v dnf)" ]
then
    sudo dnf upgrade
elif [ -x "$(command -v apt)" ]
then
    sudo apt update
    sudo apt --yes upgrade
else
    $ECHO "No apt or dnf package manager"
fi
$ECHO "\n"

$ECHO "UPDATE [Flatpack software] -----------------------------------------------------------------------------------------------------------------"
if [ -x "$(command -v flatpak)" ]
then
    sudo flatpak update
else
    $ECHO "No flatpak software"
fi
$ECHO "\n"

$ECHO "UPDATE [SNAP software] ---------------------------------------------------------------------------------------------------------------------"
if [ -x "$(command -v snap)" ]
then
    sudo snap refresh
else
    $ECHO "No snap software"
fi
$ECHO "\n"

$ECHO "UPDATE [pyenv] -----------------------------------------------------------------------------------------------------------------------------"
if [ -x $"(command -v pyenv)"]
then
    pyenv update
else
    $ECHO "No pyenv software"
fi
